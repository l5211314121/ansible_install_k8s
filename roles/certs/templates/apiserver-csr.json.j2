{
    "CN": "kubernetes",
    "hosts": [
        "10.0.0.1",
        "127.0.0.1",
        "{{ kube_service_ip }}",
        {% for host in groups['server'] %}
            "{{ host }}"
            {% if not loop.last %},
        {% endif %}{% endfor %},
        {% if cluster_ha == "yes" %}
            {% if apiserver_lb_addr %}
                {% for addr in apiserver_lb_addr.split(',') %}
                    "{{ addr }}",
                {% endfor %}
            {% endif %}
        {% endif %}
        "kubernetes",
        "kubernetes.default",
        "kubernetes.default.svc",
        "kubernetes.default.svc.cluster",
        "kubernetes.default.svc.cluster.local"
    ],
    "key": {
        "algo": "rsa",
        "size": 2048
    },
    "names": [
        {
            "C": "CN",
            "L": "Beijing",
            "ST": "Beijing",
            "O": "k8s",
            "OU": "system"
        }
    ]
}