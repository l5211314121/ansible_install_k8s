--etcd-keyfile={{workdir}}/etcd/ssl/etcd-key.pem \
--log-dir={{workdir}}/kubernetes/logs \
--kubelet-client-certificate={{workdir}}/kubernetes/ssl/kube-apiserver/apiserver.pem \
--kubelet-client-key={{workdir}}/kubernetes/ssl/kube-apiserver/apiserver-key.pem \
--log-file={{workdir}}/kubernetes/api-server.log"